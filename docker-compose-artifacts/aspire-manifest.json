{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "financeiro": {
      "error": "This resource does not support generation in the manifest."
    },
    "api": {
      "type": "project.v1",
      "path": "../myapi/myapi.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{api.bindings.http.targetPort}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{financeiro-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "api"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "angular": {
      "type": "container.v1",
      "build": {
        "context": "../financeiro_zurd",
        "dockerfile": "../financeiro_zurd/Dockerfile"
      },
      "env": {
        "NODE_ENV": "production",
        "API_HTTP": "{api.bindings.http.url}",
        "services__api__http__0": "{api.bindings.http.url}",
        "API_HTTPS": "{api.bindings.https.url}",
        "services__api__https__0": "{api.bindings.https.url}",
        "PORT": "{angular.bindings.http.targetPort}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{financeiro-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "angular"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8000,
          "external": true
        }
      }
    },
    "financeiro-dashboard": {
      "type": "container.v1",
      "image": "mcr.microsoft.com/dotnet/nightly/aspire-dashboard:latest",
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 18888
        },
        "otlp-grpc": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 18889
        }
      }
    }
  }
}